<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#22000000"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_tropical_low"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="热带低压"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_tropical_storm"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="热带风暴"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_strong_tropical_storm"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="强热带风暴"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_typhoon_legend"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="台风"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_strong_typhoon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="强台风"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chart_supper_strong_typhoon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="超强台风"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

