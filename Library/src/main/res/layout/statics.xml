<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include 
        android:id="@+id/reTitle"
        layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/reDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#B0000000"
            android:orientation="vertical"
            android:padding="5dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/level_3" />

            <LinearLayout
                android:id="@+id/llCircularProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.baselibrary.statistic.CircularProgressBar
                        android:id="@+id/bar1"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        app:marker_visible="false"
                        app:progress_background_color="@color/light_gray"
                        app:progress_color="@color/snow"
                        app:stroke_width="3.5dip"
                        app:thumb_visible="false" />

                    <TextView
                        android:id="@+id/tvBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.baselibrary.statistic.CircularProgressBar
                        android:id="@+id/bar2"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        app:marker_visible="false"
                        app:progress_background_color="@color/light_gray"
                        app:progress_color="@color/rain"
                        app:stroke_width="3.5dip"
                        app:thumb_visible="false" />

                    <TextView
                        android:id="@+id/tvBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.baselibrary.statistic.CircularProgressBar
                        android:id="@+id/bar3"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        app:marker_visible="false"
                        app:progress_background_color="@color/light_gray"
                        app:progress_color="@color/fog"
                        app:stroke_width="3.5dip"
                        app:thumb_visible="false" />

                    <TextView
                        android:id="@+id/tvBar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.baselibrary.statistic.CircularProgressBar
                        android:id="@+id/bar4"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        app:marker_visible="false"
                        app:progress_background_color="@color/light_gray"
                        app:progress_color="@color/shachen"
                        app:stroke_width="3.5dip"
                        app:thumb_visible="false" />

                    <TextView
                        android:id="@+id/tvBar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.baselibrary.statistic.CircularProgressBar
                        android:id="@+id/bar5"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        app:marker_visible="false"
                        app:progress_background_color="@color/light_gray"
                        app:progress_color="@color/mai"
                        app:stroke_width="3.5dip"
                        app:thumb_visible="false" />

                    <TextView
                        android:id="@+id/tvBar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llCircularProgressBar"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>